{
  "extends": "../../../tsproject.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [ "es2016", "dom" ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "chai",
      "@types/node",
      "mocha"
    ],
    "paths": {
      "codemirror/*": [ "./types-local/codemirror" ],
      "parse5": ["./../../../node_modules/parse5/lib/index.d.ts"]
    },
    "references": [
      {"path": "../element-analysis"},
      {"path": "../simple-template"},
      {"path": "../template-api"},
      {"path": "../util"},
      {"path": "../../opticss"}
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
